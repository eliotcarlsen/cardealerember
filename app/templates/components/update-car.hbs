{{#if updateCarForm}}
  <h4>Update {{car.Name}}'s {{car.Model}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name:</label>
        {{input value=name id="name" placeholder=car.Name}}
      </div>

      <div class="form-group">
        <label for="model"></label>
        {{input value=model id="model" placeholder=car.Model}}
      </div>

      <div class="form-group">
        <label for="color"></label>
        {{input value=color id="color" placeholder=car.Color}}
      </div>

      <div class="form-group">
        <label for="price"></label>
        {{input value=price id="price" placeholder=car.Price}}
      </div>
      <button {{action 'update' car}}>Save</button>
    </form>
  </div>
  {{else}}
  <button class="btn bg-success" {{action 'updateCarForm'}}>Update</button>
  {{/if}}
